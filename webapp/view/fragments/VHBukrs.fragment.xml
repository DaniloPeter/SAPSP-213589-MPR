<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
    <ValueHelpDialog
        title="Справочник подразделений (BU)"
        supportMultiselect="false"
        ok=".onBukrsOkPress"
        cancel=".onBukrsCancelPress"
        supportRanges="false"
        key="Bukrs"
        descriptionKey="Butxt">
        <filterBar>
            <fb:FilterBar advancedMode="true" search=".onFilterBarSearchBukrs">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="BU"
                        name="Bukrs"
                        label="Код БУ"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="Bukrs" />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="BU"
                        name="Butxt"
                        label="Наименование"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="Butxt" />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="BU"
                        name="Ort01"
                        label="Город"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="Ort01" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>