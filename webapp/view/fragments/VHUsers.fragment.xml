<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
    <ValueHelpDialog
        title="Справочник пользователей"
        supportMultiselect="false"
        ok=".onUserOkPress"
        cancel=".onUserCancelPress"
        supportRanges="false"
        key="Bname"
        descriptionKey="McNamelas">
        <filterBar>
            <fb:FilterBar advancedMode="true" search=".onFilterBarSearchUser">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="USER"
                        name="Bname"
                        label="Пользователь"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="Bname" />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="USER"
                        name="McNamelas"
                        label="Фамилия"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="McNamelas" />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="USER"
                        name="McNamefir"
                        label="Имя"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="McNamefir" />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="USER"
                        name="Department"
                        label="Отдел"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="Department" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>